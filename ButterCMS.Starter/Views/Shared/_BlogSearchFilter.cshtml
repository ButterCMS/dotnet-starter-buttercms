@model BlogSearchFilterViewModel 

<div className="sidebar blog-grid-page">
    <div className="widget search-widget">
        <h5 className="widget-title">Search This Site</h5>
        <form asp-controller="Blog" asp-action="Search" method="get">
            <input asp-for="SearchInput" type="text" name="q" placeholder="Search Here..." />
            <button type="submit"><i className="lni lni-search-alt"></i></button>
        </form>
    </div>
</div>