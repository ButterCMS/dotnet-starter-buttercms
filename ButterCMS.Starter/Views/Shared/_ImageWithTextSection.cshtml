@model ImageWithTextSectionViewModel

@{
    var imageClassNames = $"cta-image {Model.ImagePosition}-image";
}

<section id="@Model.ScrollAnchorId" class="cta-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 order-last order-lg-first">
                <div class="@imageClassNames">
                    <img src="@Model.Image" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="cta-content-wrapper">
                    <div class="section-title">
                        <h2 class="mb-20">@Model.Headline</h2>
                        @Html.Raw(Model.SubHeadline)
                        <a target="_blank" href="@Model.ButtonUrl" class="main-btn btn-hover border-btn mt-30">@Model.ButtonLabel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>