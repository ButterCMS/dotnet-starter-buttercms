@model IEnumerable<ButterCMS.Models.Post>

<section id="blog" class="blog-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="section-title text-center">
                    <h2>Latest Blog Posts</h2>
                    <p>
                        Butter also has a built in blog engine which makes it dead simple
                        to launch a new company blog.
                    </p>
                    <p>
                        <a asp-controller="blog" class="main-btn btn-hover">
                            View All Blog Posts
                        </a>
                    </p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (var post in Model)
            {
                @await Html.PartialAsync("_BlogPostTile", post)
            }
        </div>
    </div>
</section>
