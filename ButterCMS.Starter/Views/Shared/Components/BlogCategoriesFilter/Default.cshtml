@model IEnumerable<ButterCMS.Models.Category>

<div className="widget categories-widget">
    <h5 className="widget-title">Categories</h5>
    <ul className="categories-list">
        @foreach (var category in Model)
        {
            <a asp-controller="Blog" asp-action="Category" asp-route-slug="@category.Slug" class="main-btn btn-hover">@category.Name</a>
        }
    </ul>
</div>