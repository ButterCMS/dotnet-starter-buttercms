@model LandingPageViewModel

@{
    ViewBag.Title = Model.SEOViewModel.Title;
    ViewBag.Description = Model.SEOViewModel.Description;
}

@section Scripts
{
    <script src="~/assets/js/client-slider.js"></script>
}

@if (Model.HeroSection != null)
{
    @await Html.PartialAsync("_HeroSection", Model.HeroSection)
}

@if (Model.AboutSection != null)
{
    @await Html.PartialAsync("_ImageWithTextSection", Model.AboutSection)
}

@if (Model.FeaturesSection != null)
{
    @await Html.PartialAsync("_FeaturesSection", Model.FeaturesSection)
}

@if (Model.TryitSection != null)
{
    @await Html.PartialAsync("_ImageWithTextSection", Model.TryitSection)
}

@if (Model.TestimonialsSection != null)
{
    @await Html.PartialAsync("_TestimonialsSection", Model.TestimonialsSection)
}

@await Component.InvokeAsync("BlogSection")
